<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P3L_V1.View.ProfilHunter"
             Title="ProfilHunter"
             xmlns:viewmodel="clr-namespace:P3L_V1.ViewModel"
             x:DataType="viewmodel:ProfilHunterVM">
    <Grid Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Text="Profil Hunter Page"
               Grid.Row="0"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontSize="24"/>
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="Aqua"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Grid.Row="1"/>
        <Button Text="Logout"
                Command="{Binding LogoutCommand}"
                HeightRequest="60"
                WidthRequest="150"
                BackgroundColor="#FF5733"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="2"/>
    </Grid>
</ContentPage>